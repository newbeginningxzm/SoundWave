<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.paragon_ui_core.SoundWave
        android:id="@+id/sound_wave"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        app:sound_orientation="horizon"
        app:rect_number = "5"
        app:rect_color = "@color/sound_rect"
        app:rect_width="5dp"
        app:rect_height="50dp"
        app:rect_min_height="30dp"
        app:rect_interval="2dp"
        app:rect_delay="200"
        app:period="1000"
        app:frames="30"
        />

    <TextView
        android:id="@+id/channle_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/material_blue_grey_800"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>